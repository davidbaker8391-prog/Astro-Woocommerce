---
import Navbar from "./Navbar.astro"
import Footer from "./Footer.astro"

import { siteConfig } from "../config/siteConfig"

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Self-sharpening mechanical pencil that autocorrects your penmanship. Includes 2B auto-replenishing lead. Available in both Vintage Pink and Schoolbus Yellow. Order 50+ pencils, get free shipping."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteConfig.siteTitle}{title}</title>
  </head>
  <body>
    <Navbar />
    <div class="container p-4 mx-auto">
      <slot />
      <Footer />
    </div>
  </body>
</html>
